module openhltest-types {

    yang-version "1.1";
    namespace "http://openhltest.org/yang/types";
    prefix "oht";

    organization
      "OpenHlTest working group";
    contact
      "OpenHlTest working group";
    description
      "This module defines types specific to the OpenHLTest models.";

    revision 2018-02-01 {
        description
          "Initial revision.";
        reference
          "0.0.1";
    }

	feature unresolved-type {
		description "The type in the leaf needs to be reviewed and approved by model principals.";
	}

	typedef config-list-key {
		description "A type that contains only alpha numeric characters suitable for use in a list leaf node designated as the key.";
		type string {
			/*description "The pattern is a regex that defines a name to be used in all OpenHLTest keyed lists.
			Use the pattern to determine if the supplied value is valid alpha numeric.
			If the input is valid the regex should return no matches";*/
			pattern "[a-zA-Z0-9 ]";
		}
	}

	grouping chassis-card-port-group {
		description
		"Reuseable unambiguous group definition for chassis, card and port"; 

		leaf chassis {
			description
			"The ip address and/or hostname of the infrastructure that 
			contains the physical or virtual test ports.";
			type string;
		}
		leaf card {
			description
			"The one based card id that contains the physical or virtual test port";
			default 1;
			type uint16;
		}
		leaf port {
			description
			"The one based port id of the physical or virtual test port";
			default 1;
			type uint16;
		}
	}

	grouping errata-group {
		description
		"A list of errata for keyed items that failed an action.";

		list errata {
			description 
			"A list of rpc errors. 
			An empty list indicates no errors occurred";
			key "name";

			leaf name {
				description "The name of a keyed list object";
				type config-list-key;
			}
			leaf detail {
				description "Vendor specific detail of the error";
				type string;
			}
			leaf stack-trace {
				description "Optional stack trace of the error";
				type string;
			}
		}
	}
}
